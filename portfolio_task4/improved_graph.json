  "width": 500,
  "height": 300,
  "title": {
    "text": "Gun deaths in Florida (Interactive)",
    "subtitle": "Hover to view number of gun deaths by year",
    "anchor": "start",
    "font": "Baskerville",
    "subtitleFont": "Baskerville",
    "fontSize": 18,
    "subtitleFontSize": 12
  },
  "layer": [
    {
      "mark": {"type": "area", "color": "darkred", "opacity": 0.5, "interpolate": "linear"},
      "encoding": {
        "x": {
          "field": "Year",
          "type": "quantitative",
          "axis": {
            "format": "d",
            "title": null,
            "labelFont": "Baskerville",
            "titleFont": "Baskerville"
          }
        },
        "y": {
          "field": "Number of murders",
          "type": "quantitative",
          "axis": {
            "title": null,
            "labelFont": "Baskerville",
            "titleFont": "Baskerville"
          }
        }
      }
    },
    {
      "mark": {"type": "line", "color": "black", "strokeWidth": 2, "interpolate": "linear"},
      "encoding": {
        "x": {"field": "Year", "type": "quantitative"},
        "y": {"field": "Number of murders", "type": "quantitative"}
      }
    },
    {
      "transform": [
        {"filter": {"param": "hover", "empty": false}}
      ],
      "mark": {"type": "point", "size": 80, "filled": true, "color": "black"},
      "encoding": {
        "x": {"field": "Year", "type": "quantitative"},
        "y": {"field": "Number of murders", "type": "quantitative"},
        "tooltip": [
          {"field": "Year", "type": "quantitative", "title": "Year"},
          {"field": "Number of murders", "type": "quantitative", "title": "Number of Murders", "format": ","}
        ]
      }
    },
    {
      "mark": "rule",
      "encoding": {
        "x": {"field": "Year", "type": "quantitative"},
        "opacity": {
          "condition": {"value": 0.3, "param": "hover", "empty": false},
          "value": 0
        },
        "tooltip": [
          {"field": "Year", "type": "quantitative", "title": "Year"},
          {"field": "Number of murders", "type": "quantitative", "title": "Number of Murders", "format": ","}
        ]
      },
      "params": [
        {
          "name": "hover",
          "select": {
            "type": "point",
            "fields": ["Year"],
            "nearest": true,
            "on": "pointerover",
            "clear": "pointerout"
          }
        }
      ]
    }
  ],
  "config": {
    "background": "#FDFBF7",
    "style": {
      "guide-label": {"font": "Baskerville"},
      "guide-title": {"font": "Baskerville"}
    }
  }
}