{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",

  "title": {
    "text":"Real GDP Per Capita",
    "font": "Baskerville",
    "subtitle": ["Current International USD, PPP", "Source: World Bank"],
    "subtitleFont": "Baskerville"
  },

  "width": 400,
  "height": 300,

  "data": {"url": "https://raw.githubusercontent.com/EconomicsObservatory/courses/main/1/s1_example_data/chart2_GDP_pc_6_countries.csv"},

  "mark": "line",

  "encoding": {
    "x": {
      "field": "Year",
      "type": "temporal",
      "title": null,
      "axis": {"labelFont": "Baskerville"}
    },
    "y": {
      "field": "GDP pc",
      "type": "quantitative",
      "title": null,
      "axis": {"labelFont": "Baskerville"}
    },
    "color": {
      "field": "Country Name",
      "type": "nominal",
      "legend": {"labelFont": "Baskerville", "titleFont": "Baskerville"}
    }
  },

  "config": {
    "background": "#FDFBF7",
    "style": {
      "guide-label": {"font": "Baskerville"},
      "guide-title": {"font": "Baskerville"}
    }
  }
}